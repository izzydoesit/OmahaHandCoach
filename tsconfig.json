{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "ES5",
    "module": "commonjs",
    "outDir": "build",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "filesGlob": [
    "typings/index.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native",
    "react-test-renderer",
    "jest"
  ],
  "exclude": [
    ".expo",
    ".expo-shared",
    "build",
    "coverage",
    "node_modules",
    "babel.config.js",
    ".eslintrc.js",
    ".prettierrc.js",
    "metro.config.js",
    "jest.config.js",
    "index.js",
    "App.js"
  ],
  "compileOnSave": false
}
